-- Fun√ß√£o pra tocar m√∫sica
local function PlaySong(id)
    local args = {"PlaySong", id}
    local char = game:GetService("Players").LocalPlayer.Character
    if char and char:FindFirstChild("Boom Box") then
        char:WaitForChild("Boom Box"):WaitForChild("Remote"):FireServer(unpack(args))
    else
        Library:Notify("Erro", "Nenhum Boombox encontrado no personagem!", 3)
    end
end

-- --- ABA 1: PLAYER ---
local Tab1 = Window:NewTab("Player")
local Section1 = Tab1:NewSection("Player de M√∫sica")

for _, song in pairs(songs) do
    local label = song.featured and "üî• TOCAR: " .. song.name:upper() .. " üî•" or "Tocar: " .. song.name
    Section1:NewButton(label, "Toca esta m√∫sica no Boombox", function()
        PlaySong(song.id)
    end)
end

Section1:NewTextBox("ID Customizado", "Digite um ID para tocar", function(txt)
    if tonumber(txt) then PlaySong(txt) end
end)

-- --- ABA 2: COPIAR IDS ---
local Tab2 = Window:NewTab("Copiar IDs")
local Section2 = Tab2:NewSection("Clique para copiar o ID")

for _, song in pairs(songs) do
    local label = song.featured and "‚≠ê COPIAR: " .. song.name:upper() or "Copiar: " .. song.name
    Section2:NewButton(label, "ID: " .. song.id, function()
        setclipboard(song.id)
        Library:Notify("Copiado!", "ID " .. song.id .. " copiado para a √°rea de transfer√™ncia.", 2)
    end)
end
