-- üì¶ Carregar Bibliotecas
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- üìñ Criar Janela Principal
local Window = Fluent:CreateWindow({
    Title = "Homes System",
    SubTitle = "by dawid",
    TabWidth = 160,
    Size = UDim2.fromOffset(500, 400),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.LeftControl
})

-- üìÇ Criar Aba Homes
local HomeTab = Window:AddTab({ Title = "Homes", Icon = "home" })

local homes = {}
local looping = false
local loopDelay = 3 -- segundos entre teleportes (configur√°vel no menu)

-- üè† Fun√ß√£o para adicionar um Home
local function addHome()
    local character = game.Players.LocalPlayer.Character
    local hrp = character and character:FindFirstChild("HumanoidRootPart")
    if hrp then
        local homeName = "Home #" .. tostring(#homes + 1)
        table.insert(homes, {
            name = homeName,
            cframe = hrp.CFrame
        })
        Fluent:Notify({
            Title = "Home Adicionado",
            Content = homeName .. " salvo com sucesso!",
            Duration = 3
        })
    end
end

-- üîÅ Fun√ß√£o para loop entre Homes
local function startLoop()
    task.spawn(function()
        while looping do
            for _, home in ipairs(homes) do
                if not looping then break end
                local character = game.Players.LocalPlayer.Character
                local hrp = character and character:FindFirstChild("HumanoidRootPart")
                if hrp then
                    hrp.CFrame = home.cframe
                end
                task.wait(loopDelay) -- tempo entre trocar de home
            end
        end
    end)
end

-- ‚ûï Bot√£o para adicionar Home
HomeTab:AddButton({
    Title = "‚ûï Adicionar Home",
    Callback = function()
        addHome()
    end
})

-- üîÅ Toggle para ativar/desativar Loop
HomeTab:AddToggle("LoopHomes", {
    Title = "üîÅ Loop entre Homes",
    Default = false
}):OnChanged(function(value)
    looping = value
    if looping then
        Fluent:Notify({
            Title = "Loop Ativado",
            Content = "Alternando entre homes...",
            Duration = 3
        })
        startLoop()
    else
        Fluent:Notify({
            Title = "Loop Desativado",
            Content = "Parado de alternar entre homes.",
            Duration = 3
        })
    end
end)

-- ‚ö° Dropdown para escolher velocidade
HomeTab:AddDropdown("Velocidade", {
    Title = "‚ö° Velocidade do Loop",
    Values = { "0.1s", "0.3s", "0.5s", "1s", "2s", "3s" },
    Default = "3s"
}):OnChanged(function(value)
    loopDelay = tonumber(value:match("[%d%.]+")) or 3
    Fluent:Notify({
        Title = "Velocidade Alterada",
        Content = "Delay entre homes: " .. loopDelay .. "s",
        Duration = 3
    })
end)

-- üìú Lista de Homes com bot√µes para teleportar
HomeTab:AddParagraph({
    Title = "üìú Homes Salvos",
    Content = "Clique para teleportar."
})

HomeTab:AddButton({
    Title = "üîÑ Atualizar Lista de Homes",
    Callback = function()
        for _, home in ipairs(homes) do
            HomeTab:AddButton({
                Title = home.name,
                Callback = function()
                    local character = game.Players.LocalPlayer.Character
                    local hrp = character and character:FindFirstChild("HumanoidRootPart")
                    if hrp then
                        hrp.CFrame = home.cframe
                        Fluent:Notify({
                            Title = "Teleportado",
                            Content = "Voc√™ foi teleportado para " .. home.name,
                            Duration = 3
                        })
                    end
                end
            })
        end
    end
})
